<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/linearLayout">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:cardBackgroundColor="#E6CAF1"
        app:cardElevation="5sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/avatarDp"
                    android:layout_width="100sp"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@color/black">

                </ImageView>
                // Pro pic

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="3sp"
                        android:paddingBottom="5sp">

                        <TextView
                            android:id="@+id/author"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/generated_icon"
                            android:drawablePadding="10sp"
                            android:fontFamily="sans-serif-medium"
                            android:paddingLeft="10sp"
                            android:text="Author Name"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="15sp">

                        </TextView>//Author Name

                    </LinearLayout>
                    // 1L

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="5sp">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:paddingLeft="15sp"
                            android:text="Repo Title"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold">

                        </TextView>
                        // Repo title

                    </LinearLayout>
                    // 2L

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="5sp">

                        <TextView
                            android:id="@+id/description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:paddingLeft="15sp"
                            android:text="Repo Description"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="15sp">

                        </TextView>
                        // Repo description

                    </LinearLayout>
                    // 3L

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/language"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/language_icon"
                                android:drawablePadding="10sp"
                                android:fontFamily="sans-serif-medium"
                                android:paddingLeft="10sp"
                                android:text="Language"
                                android:textSize="15sp">

                            </TextView>// Language

                            <TextView
                                android:id="@+id/stars"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="right"
                                android:layout_weight="1"
                                android:drawableRight="@drawable/star_icon"
                                android:drawablePadding="5sp"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="right"
                                android:text="1000"
                                android:textSize="15sp">

                            </TextView>// Star count

                        </LinearLayout>
                        // 4L Sep 1

                    </LinearLayout>
                    // 4L

                </LinearLayout>
                // Content

            </LinearLayout>
            // Main Layout

        </LinearLayout>

    </androidx.cardview.widget.CardView>





    // Main
</LinearLayout>